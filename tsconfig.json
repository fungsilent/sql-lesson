{
    "compilerOptions": {
        "lib": ["es5", "es6"],
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "./build",
        "paths": {
            "#root/*": ["./src/*"]
        }
    }
}
